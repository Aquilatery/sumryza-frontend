{
    "name": "YouTube Summarizer MVP",
    "version": "0.1",
    "manifest_version": 3,
    "description": "MVP: Summarize YouTube videos using ChatGPT 4o mini API.",
    "action":{
        "default_popup": "popup.html"
      },
    "permissions": [
        "activeTab",
        "scripting",
        "storage"
    ],
    "host_permissions": [
        "*://www.youtube.com/*",
        "http://localhost:8000/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "*://www.youtube.com/watch*"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "style.css"
            ],
            "run_at": "document_end"
        }
    ],
    "icons": {
        "16": "icons/icon16.png"
    }
}